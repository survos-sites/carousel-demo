{% extends 'base.html.twig' %}
{% set useAssetMap = app.request.get('useAssetMap', false) %}
{% block body %}
    <div class="relative h-full max-w-5xl mx-auto px-4">
        <section class="mt-16">
            <div
                    {{ stimulus_controller('carousel', {
                        options: {
                            navigation: {
                                nextEl: ".swiper-button-next",
                                prevEl: ".swiper-button-prev"
                            }
                        }
                    }) }}
                    class="swiper"
            >
                <div class="swiper-wrapper">
                    <div class="swiper-slide">
                        <div class="h-64 flex justify-center items-center">Slide 1</div>
                    </div>

                    <div class="swiper-slide">
                        <div class="h-64 flex justify-center items-center">Slide 2</div>
                    </div>

                    <div class="swiper-slide">
                        <div class="h-64 flex justify-center items-center">Slide 3</div>
                    </div>
                </div>

                <div class="swiper-button-next"></div>
                <div class="swiper-button-prev"></div>
            </div>
        </section>
    </div>
{% endblock %}

